{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "defaults",
      "hidden": true,
      "binaryDir": "${sourceDir}/${presetName}",
      "installDir": "${sourceDir}/${presetName}",
      "generator": "Ninja"
    },
    {
      "name": "Build-Test",
      "displayName": "test config",
      "description": "configures embeddedinfralib for testing",
      "inherits": "defaults",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Build-Coverage",
      "displayName": "coverage config",
      "description": "configures embeddedinfralib for coverage",
      "inherits": "Build-Test",
      "cacheVariables": {
        "EMIL_ENABLE_COVERAGE": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "Build-Host",
      "displayName": "host config",
      "description": "configures embeddedinfralib for tooling",
      "inherits": "defaults",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "EMIL_BUILD_TESTS": "Off",
        "EMIL_BUILD_EXAMPLES": "Off"
      }
    },
    {
      "name": "Build-Embedded",
      "displayName": "embedded config",
      "description": "configures embeddedinfralib for target libraries",
      "inherits": "defaults",
      "toolchainFile": "${sourceDir}/cmake/toolchain-arm-gcc.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_PREFIX_PATH": "${sourceDir}/Build-Host",
        "EMIL_PACKAGE_CONFIG_IMPORT_NAMESPACE": "emil::"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Build-Test",
      "configurePreset": "Build-Test"
    },
    {
      "name": "Build-Coverage",
      "configurePreset": "Build-Coverage"
    },
    {
      "name": "Build-Host",
      "configurePreset": "Build-Host"
    },
    {
      "name": "Build-Embedded",
      "configurePreset": "Build-Embedded"
    }
  ],
  "testPresets": [
    {
      "name": "Unit-Test",
      "configurePreset": "Build-Test"
    },
    {
      "name": "Coverage-Test",
      "configurePreset": "Build-Coverage"
    }
  ]
}