{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "defaults",
      "hidden": true,
      "binaryDir": "${sourceDir}/${presetName}"
    },
    {
      "name": "Build-Test",
      "displayName": "test config",
      "description": "configures embeddedinfralib for testing",
      "inherits": "defaults",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Build-Coverage",
      "displayName": "coverage config",
      "description": "configures embeddedinfralib for coverage",
      "inherits": "Build-Test",
      "cacheVariables": {
        "EMIL_ENABLE_COVERAGE": "On",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "On"
      },
      "generator": "Ninja"
    },
    {
      "name": "Build-Host",
      "displayName": "host config",
      "description": "configures embeddedinfralib for tooling",
      "inherits": "defaults",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "EMIL_BUILD_TESTS": "Off",
        "EMIL_BUILD_EXAMPLES": "Off"
      },
      "generator": "Ninja"
    },
    {
      "name": "Build-Embedded",
      "displayName": "embedded config",
      "description": "configures embeddedinfralib for target libraries",
      "inherits": "defaults",
      "toolchainFile": "${sourceDir}/cmake/toolchain-arm-gcc.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_PREFIX_PATH": "${sourceDir}/Build-Host"
      },
      "generator": "Ninja"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "Build-Test",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    }
  ]
}
